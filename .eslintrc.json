{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 150,
        "ignoreComments": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false
      }
    ],
    "no-console": "error",
    "no-param-reassign": "error",
    "prefer-template": "warn",
    "no-return-await": "off",
    "linebreak-style": "off",
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ]
  }
}
